<Window x:Class="TreeType.ToggleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TreeType" Height="118.46" Width="178.4" Topmost="True"
        ResizeMode="NoResize" WindowStartupLocation="Manual" ShowInTaskbar="False"
        ShowActivated="False">
    <Grid>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="90,10,0,0" 
                VerticalAlignment="Top" Width="75" Name="exit" Click="exitListener"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,36.96,0,0" TextWrapping="Wrap" Name="instructions"
                   Text="Hold and release the right mouse button to turn the TreeType keyboard on or off" VerticalAlignment="Top" Width="155"
                   TextAlignment="Center"/>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="10,10,0,0" 
                Name="SettingsButton" VerticalAlignment="Top" Width="75" Click="settingsListener"/>

    </Grid>
</Window>
